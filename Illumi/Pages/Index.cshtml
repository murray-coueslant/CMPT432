@page
@model IndexModel
@{
    ViewData["Title"] = "Illumi";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Illumi Compiler</h1>
</div>

<form>
    <div class="form-group container">
        <div class = "row">
            <div class="col-8" id="programInputColumn">
                <label for="programInput">Program:</label>
                <textarea class="form-control rounded-0" id="programInput" rows="10" placeholder="Enter your program here."></textarea>
            </div>

            <div class="col-4" id="lexerOutputColumn">
                <label for="lexerOutput">Lexer Output:</label>
                <textarea class="form-control rounded-0" id="lexerOutput" rows="10"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <input type="submit" value="Compile!" class="btn btn-primary mt-4"></input>
            </div>
        </div>
    </div>
</form>

